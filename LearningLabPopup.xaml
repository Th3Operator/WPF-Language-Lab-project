<Window x:Class="WPF_Language_Lab_project.LearningLabActivity"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Learning Lab" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="translateButton" Content="Translate" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="75" Click="translateButton_Click"/>
        <Label x:Name="outputLabel" Content="Translation will appear here" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
